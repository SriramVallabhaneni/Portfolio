// quiz
var score = 0;
var click = 0;
onEvent("wrongAnswer1", "click", function () {
  playSound("sound://category_app/app_interface_button_4.mp3");
  click = click + 1;
  setProperty("wrongAnswer1", "background-color", "red");
  setProperty("wrongAnswer1", "text", "Incorrect");
  setProperty("question1", "text", "Try Again!");
});
