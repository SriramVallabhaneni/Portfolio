onEvent("rightAnswer1", "click", function () {
  playSound("sound://category_app/app_interface_button_4.mp3");
  setProperty("rightAnswer1", "background-color", "green");
  setProperty("rightAnswer1", "text", "Correct!");
  setProperty("question1", "text", "That's right! Rhinos date back to around 50 million years! Of course, they were not exactly the same.");
  if (click < 1) {
    score = score + 1;
  }
});
onEvent("rightAnswer2", "click", function () {
  playSound("sound://category_app/app_interface_button_4.mp3");
  setProperty("rightAnswer2", "background-color", "green");
  setProperty("rightAnswer2", "text", "Correct!");
  setProperty("question2", "text", "That's right! Red pandas mainly live in the Eastern Himalayas, near countries like China, Nepal, and Bhutan.");
  if (click < 1) {
    score = score + 1;
  }
});
onEvent("rightAnswer3", "click", function () {
  playSound("sound://category_app/app_interface_button_4.mp3");
  setProperty("rightAnswer3", "background-color", "green");
  setProperty("rightAnswer3", "text", "Correct!");
  setProperty("question3", "text", "That's right! Orangutans love to eat fruit, and by doing so, they help disperse fruit seeds in their waste.");
  if (click < 1) {
    score = score + 1;
  }
});
onEvent("rightAnswer4", "click", function () {
  playSound("sound://category_app/app_interface_button_4.mp3");
  setProperty("rightAnswer4", "background-color", "green");
  setProperty("rightAnswer4", "text", "Correct!");
  setProperty("question4", "text", "That's right! As it stands, there are currently around 2,500 Bengal tigers in the wild.");
  if (click < 1) {
    score = score + 1;
  }
});

